@model List<GerenciaPub.Models.CidadeModel>
@{
    Layout = "~/Views/Shared/_Cad.cshtml";
    ViewBag.Title = "Cidades";
    ViewBag.Lista = Model;
}
@section styles{
    <link href="~/Content/Cadastro/Cidade.css" rel="stylesheet" />
}

@section tituloGrid{
    <th>Nome</th>
    <th>UF</th>
    <th>Ação</th>
}

@section linhaGrid{
    @foreach (var item in Model)
    {

        <tr data-id="@item.Id">
            <td>@item.Nome</td>
            <td> @item.Uf</td>
            <td>
                <a class="btn btn-primary btn-alterar" role="button"><i class="glyphicon glyphicon-pencil"></i> Alterar</a>
                <a class="btn btn-danger btn-excluir" role="button"><i class="glyphicon glyphicon-trash"></i> Excluir</a>
            </td>
        </tr>
    }
}

@section camposCadastro{
    <div class="row">
        <div class="form-group">
            @Html.Label("txt_nome", "Nome", new { @class = "col-md-3 control-label" })
            <div class="col-md-8">
                @Html.TextBox("txt_nome", null, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("ddl_estado", "Estado", new { @class = "col-md-3 control-label" })
            <div class="col-md-9">
                @Html.DropDownList("ddl_estado", new SelectList(ViewBag.ListaUf, "Id", "nome"), new { @class = "form-control" })
            </div>
        </div>
    </div>
}

@section scripts{
    <script>
        var tituloPagina = '@ViewBag.Title';
        var url_excluir = '@Url.Action("ExcluirCidade", "CadCidade")';
        var url_confirmar = '@Url.Action("SalvarCidade", "CadCidade")';
        var url_alterar = '@Url.Action("RecuperarCidade", "CadCidade")';
        //var url_listar_estados = '@Url.Action("RecuperarEstado", "CadUf")';

    </script>

    <script src="~/Scripts/Cadastro/Cidade.js"></script>
}


