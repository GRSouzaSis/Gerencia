@model List<GerenciaPub.Models.GrupoProdutoModel>
@{
    Layout = "~/Views/Shared/_Cad.cshtml";
    ViewBag.Title = "Grupo de Produtos";
    ViewBag.Lista = Model;
}
@section styles{
    <link href="~/Content/Cadastro/GrupoProduto.css" rel="stylesheet" />
}

@section tituloGrid{
    <th>Nome</th>
    <th>Ativo</th>
    <th>Ação</th>
}

@section linhaGrid{
    @foreach (var item in Model)
    {
        var ativo = (item.Ativo ? "SIM" : "NÃO");

        <tr data-id="@item.Id">
            <td>@item.Nome.ToUpper()</td>
            <td>@ativo</td>
            <td>
                <a class="btn btn-primary btn-alterar" role="button"><i class="glyphicon glyphicon-pencil"></i> Alterar</a>
                <a class="btn btn-danger btn-excluir" role="button"><i class="glyphicon glyphicon-trash"></i> Excluir</a>
            </td>
        </tr>

    }
}

@section camposCadastro{
    <div class="row">
        <div class="form-group">
            @Html.Label("txt_nome", "Nome", new { @class = "col-md-3 control-label" })
            <div class="col-md-8">
                @Html.TextBox("txt_nome", null, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("cbx_ativo", "Ativo", new { @class = "col-md-3 control-label" })
            <div class="col-md-8">
                @Html.CheckBox("cbx_ativo")
            </div>
        </div>
    </div>
}

@section scripts{
    <script>
        var tituloPagina = '@ViewBag.Title';

        var url_excluir = '@Url.Action("ExcluirGrupoProduto", "CadGruProduto")';
        var url_confirmar = '@Url.Action("SalvarGrupoProduto", "CadGruProduto")';
        var url_alterar = '@Url.Action("RecuperarGrupoProduto", "CadGruProduto")';
    </script>
    <script src="~/Scripts/jquery.mask.min.js"></script>
    <script src="~/Scripts/Cadastro/GrupoProduto.js"></script>
}
